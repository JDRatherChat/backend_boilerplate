# Base environment variables (safe defaults).
# Copy to `environments/base.env` for local dev.
#
# This file is used by:
# - Django settings (config.settings.base)
# - Docker Compose (web/worker services via env_file)

# Core Django
DEBUG=1
SECRET_KEY=changeme-in-dev
ALLOWED_HOSTS=*

# Database (Django uses DATABASE_URL; Postgres container uses POSTGRES_* vars)
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_PORT=5432
DATABASE_URL=postgres://app:app@db:5432/app

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# Startup behaviour
# AUTO_MIGRATE=1 will run `python manage.py migrate` automatically when the web container starts.
AUTO_MIGRATE=1

# Optional: Django port published by docker-compose (host:container)
DJANGO_PORT=8000

# Celery
CELERY_LOGLEVEL=INFO