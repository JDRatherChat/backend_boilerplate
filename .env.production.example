DJANGO_SETTINGS_MODULE=config.settings.prod
SECRET_KEY=<replace-with-strong-secret-key>
DEBUG=False
ALLOWED_HOSTS=<your.domain.com,another.domain.com>

# Database (prefer managed DB for production)
# Example: postgres://<user>:<password>@<host>:5432/<db>
DATABASE_URL=postgres://<db_user>:<db_password>@<db_host>:5432/<db_name>

# Cache / Broker
# Example: redis://<host>:<port>/<db-index>
REDIS_URL=redis://<redis_host>:6379/0

# Security / Proxy
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Observability (optional)
SENTRY_DSN=<your-sentry-dsn-or-empty>
